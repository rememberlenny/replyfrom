

%div.user-bodycontent.full-width.flexto1.app-row
  .toolbar-users.layoutbox
    %h3
      #{count_messages} Messages | #{@account.slug}@incoming.replyfrom.com
  .table-user-wrapper.layoutbox.flexto1.app-row
    .table-portal.layoutbox.flexto1.height100
      %table.tbl.o__fit.o__fixed.keyboard_accessible.js__user-list-table.tablesorter
        %thead
          %tr
            %th.t__small-caps.name.o__fixed-header
            %th.t__small-caps.name.o__fixed-header
              Email
            %th.t__small-caps.name.o__fixed-header
              Subject
            %th.t__small-caps.name.o__fixed-header
              Body
            %th.t__small-caps.name.o__fixed-header
              Created At
            %th.t__small-caps.name.o__fixed-header

        %tbody.tbl__body
          - @emails.each do |email|
            %tr
              %td.tbl__cell
                %input{:type => "checkbox", name: 'email_' + email.id.to_s}
              %td.tbl__cell
                = link_to email.from, email
              %td.tbl__cell
                = link_to email.subject, email
              %td.tbl__cell
                = link_to email.body, email
              %td.tbl__cell
                = email.created_at
              %td.tbl__cell
          - (30-count_messages.to_i).times do
            %tr
              %td.tbl__cell
              %td.tbl__cell
              %td.tbl__cell
              %td.tbl__cell
              %td.tbl__cell
              %td.tbl__cell
